@model List<ConsultasPsicologiaMVC.Models.PacienteViewModel>

@if (Model != null && Model.Any())
{
    @foreach (var paciente in Model)
    {
        <tr>
            <td>@paciente.NomeCompleto</td>
            <td>@(paciente.DataNascimento.HasValue ? paciente.DataNascimento.Value.ToString("dd/MM/yyyy") : "N/A")</td>
            <td>@paciente.Email</td>
            <td>
                <a asp-controller="Admin" asp-action="Edit" asp-route-email="@paciente.Email" class="btn btn-sm btn-primary" title="Editar">
                    <i class="fas fa-pencil-alt"></i>
                </a>
            </td>
        </tr>
    }
}
else
{
    @for (int i = 0; i < 15; i++)
    {
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
    }
}